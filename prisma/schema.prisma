generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  email        String @unique
  passwordHash String @default("")
  roleId       Int
  role         Role   @relation(fields: [roleId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  @@index([roleId])
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}
